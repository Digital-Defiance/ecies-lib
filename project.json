{
  "name": "@digitaldefiance/ecies-lib",
  "sourceRoot": "packages/digitaldefiance-ecies-lib/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/digitaldefiance-ecies-lib/dist",
        "main": "packages/digitaldefiance-ecies-lib/src/index.ts",
        "tsConfig": "packages/digitaldefiance-ecies-lib/tsconfig.json"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/digitaldefiance-ecies-lib/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/digitaldefiance-ecies-lib/**/*.ts"]
      }
    }
  },
  "tags": ["scope:shared", "type:lib"]
}
